//Codigo con explicacion en Espa√±ol

#include <iostream>
using namespace std;

int main() {
    int co,t;
    do{
        cout<<"Ingrese CO: "; // ingrese el valor del monoxido en el area
        cin>>co;
        cout<<"Ingrese t: ";// ingrese el valor de la temperatura en el area
        cin>>t;
        if(co>50||t>150)
            cout<<"ALERTA DE INCENDIO"; // si alguno de los valores dados supera los valores asignados en la linea 11 ,salta alterta de incendio
    }while(co>50||t>150);
return 0;}

